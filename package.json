{
  "name": "csssr-test",
  "version": "1.0.0",
  "description": "Тестовое задание для CSSSR",
  "repository": "https://github.com/glevanov/csssr-test.git",
  "author": "Grigoriy Levanov <glevanov@gmail.com>",
  "license": "MIT",
  "scripts": {
    "lint:style": "stylelint \"src/sass/**/*.scss\" --syntax scss",
    "sort-styles": "stylelint \"src/sass/**/*.scss\" --syntax scss --fix --config ./.stylelintrc-sort",
    "build": "gulp build",
    "gh-pages": "gh-pages -d dist",
    "deploy": "npm run build && npm run gh-pages",
    "start": "gulp start",
    "images": "gulp images",
    "test": "npm run lint:style"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run sort-styles"
    }
  },
  "browserslist": [
    "last 2 IE versions",
    "last 2 Safari versions",
    "last 2 Chrome versions",
    "last 2 iOS versions",
    "last 2 ChromeAndroid versions"
  ],
  "devDependencies": {
    "@babel/preset-env": "^7.2.3",
    "autoprefixer": "^9.4.5",
    "browser-sync": "^2.26.3",
    "del": "^3.0.0",
    "gh-pages": "^2.0.1",
    "gulp": "^4.0.0",
    "gulp-better-rollup": "^3.4.0",
    "gulp-csso": "^3.0.1",
    "gulp-imagemin": "^5.0.3",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^8.0.0",
    "gulp-pug": "^4.0.1",
    "gulp-sass": "^4.0.2",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-webp": "^4.0.0",
    "husky": "^1.3.1",
    "rollup-plugin-babel": "^4.3.0",
    "stylelint": "^9.9.0",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-order": "^2.0.0",
    "stylelint-scss": "^3.4.4"
  }
}
